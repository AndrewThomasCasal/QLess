

@model RegisterViewModel

<form>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Firstname">Firstname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Firstname" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Lastname">Lastname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Lastname" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="EmailAddress">Email Address</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="EmailAddress" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Password">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Password" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ConfirmPassword">Confirm Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="ConfirmPassword" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" asp-action="RegisterUser" asp-controller="Account">Register</button>
                </div>
            </div>
            <div class="form-group row" style="margin-top:20px">

                @if (TempData["FailedToRegister"] != null)
                {
                    <p class="alert alert-danger" id="successMessage">@TempData["FailedToRegister"]</p>
                }

            </div>
        </div>
    </div>
</form>