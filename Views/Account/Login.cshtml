

@model LoginViewModel

<form>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="EmailAddress">Email Address</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="EmailAddress" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Password">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Password" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" asp-action="LoginUser" asp-controller="Account">Login</button>
                </div>
            </div>
            <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a></p>
            <div class="form-group row" style="margin-top:20px">

                @if (TempData["LoginAlert"] != null)
                {
                    <p class="alert alert-danger" id="successMessage">@TempData["LoginAlert"]</p>
                }

            </div>
        </div>
    </div>
</form>