
<div class="row">
    <div class="col-lg-12">
        <form>
            <fieldset class="form-group">
                <div class="row">
                    <legend class="col-form-label col-sm-2 pt-0">Type</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="discountTypeRadios" id="radioSeniorCitizen" value="1" checked>
                            <label class="form-check-label" for="gridRadios1">
                                Senior Citizen
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="discountTypeRadios" id="radioPWD" value="2">
                            <label class="form-check-label" for="gridRadios2">
                                PWD
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div id="divSeniorCitizen" class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Senior Citizen Number</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="inputSeniorCitizenNum" name="seniorCitizenNum" placeholder="">
                    <small id="passwordHelpBlock" class="form-text text-muted">
                        Senior Citizen Number format is ##-####-####
                    </small>
                </div>
                
            </div>
            <div id="divPWD" class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">PWD Number</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="inputPWDNum" name="pwdNum">
                    <small id="passwordHelpBlock" class="form-text text-muted">
                        PWD Number format is ####-####-####
                    </small>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" asp-controller="Home" asp-action="BuyQLESSDiscountedTransportCard" class="btn btn-primary">Buy QLESS Discounted Transport Card</button>
                </div>
            </div>
            <div class="alert alert-danger" id="alert" role="alert">
                <input type="hidden" id="hiddenAlertMessage" value="@TempData["QLESSDiscountedTransportCardAlert"]" />
                <p id="alertMessage"></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            $("#divSeniorCitizen").show();
            $("#divPWD").hide();

            $("[name='discountTypeRadios']").on("change", function () {
                if ($(this).val() == "1") {
                    $("#inputSeniorCitizenNum").val("");
                    $("#inputPWDNum").val("");

                    $("#divSeniorCitizen").show();
                    $("#divPWD").hide();
                }
                else {
                    $("#inputSeniorCitizenNum").val("");
                    $("#inputPWDNum").val("");

                    $("#divSeniorCitizen").hide();
                    $("#divPWD").show();
                }
            });

            
            //$("#alert").hide();

            if ($("#hiddenAlertMessage").val() == "") {
                $("#alert").hide();
            }
            else {
                $("#alertMessage").text($("#hiddenAlertMessage").val())
                $("#alert").show();
            }

        });
    </script>
}
